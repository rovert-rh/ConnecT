---
const {
    Titulo,
    Descripcion,
    Icon,
    tituloColor = "text-primario",
    tituloHoverColor = "text-white",
    listaColor = "text-black",
} = Astro.props;
---

<div
    class="group bg-white/80 backdrop-blur-md rounded-3xl shadow-lg p-6 hover:shadow-2xl hover:-translate-y-2 transform transition-all duration-500 ease-in-out text-center w-full max-w-xs flex flex-col items-center animate-fade-in-up"
>
    <div
        class="w-20 h-20 mb-4 rounded-full bg-primario/10 flex items-center justify-center transition-transform duration-300 group-hover:scale-110"
    >
        <img src={Icon} alt={Titulo} class="w-12 h-12 object-contain" />
    </div>

    <h4
        class={`text-xl font-bold mb-3 transition-colors duration-300 group-hover:${tituloHoverColor} ${tituloColor}`}
    >
        {Titulo}
    </h4>

    <ul class={`text-sm text-left space-y-2 ${listaColor}`}>
        {
            Descripcion.map((linea, idx) => (
                <li class="relative pl-5 before:content-['âœ“'] before:absolute before:left-0 before:text-primario before:font-bold before:text-lg">
                    {linea}
                </li>
            ))
        }
    </ul>
</div>
