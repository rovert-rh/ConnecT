---
import { Image } from "astro:assets";
import logo from "../assets/Logo.webp";
---

<nav class="bg-white border-b border-gray-200 z-10">
    <div
        class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4"
    >
        <!-- Logo -->
        <a href="/" class="flex items-center space-x-4 rtl:space-x-reverse">
            <Image src={logo} class="h-15 w-auto" alt="Logo" />
        </a>

        <!-- Menú Hamburguesa -->
        <input type="checkbox" id="menu-toggle" class="peer hidden" />
        <label for="menu-toggle" class="md:hidden text-gray-500 cursor-pointer">
            <svg
                class="w-6 h-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4 6h16M4 12h16m-7 6h7"></path>
            </svg>
        </label>

        <!-- Navegación -->
        <div
            class="hidden peer-checked:flex flex-col md:flex md:flex-row md:items-center md:space-x-8 w-full md:w-auto mt-4 md:mt-0"
        >
            <a href="/nosotros" class="text-gray-900 hover:text-primario"
                >Nosotros</a
            >

            <!-- Dropdown -->
            <div class="relative group">
                <button
                    class="flex items-center text-gray-900 hover:text-primario"
                >
                    Soluciones
                    <svg
                        class="w-4 h-4 ml-1"
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M19 9l-7 7-7-7"></path>
                    </svg>
                </button>
                <div
                    class="absolute left-0 mt-2 hidden w-44 bg-white border rounded-md shadow-md z-50 group-hover:block group-focus-within:block"
                >
                    <a
                        href="/soluciones/desarrollo"
                        class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-secundario hover:text-white"
                        >Desarrollo Web Apps</a
                    >
                    <a
                        href="/soluciones/dynamics"
                        class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-secundario hover:text-white"
                        >Dynamics 365</a
                    >
                    <a
                        href="/soluciones/platform"
                        class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-secundario hover:text-white"
                        >Power Platforms</a
                    >
                    <a
                        href="/soluciones/ia"
                        class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-secundario hover:text-white"
                        >Soluciones IA</a
                    >
                </div>
            </div>

            <a href="/proyectos" class="text-gray-900 hover:text-primario"
                >Proyectos</a
            >
            <a href="/recursos" class="text-gray-900 hover:text-primario"
                >Recursos</a
            >
        </div>

        <!-- Botón de contacto -->
        <a
            href="/contacto"
            class="hidden md:inline-block px-4 py-2 text-white bg-secundario rounded-md hover:bg-primario"
            >Contacto</a
        >
    </div>
</nav>
