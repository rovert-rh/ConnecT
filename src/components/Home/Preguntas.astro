---
import faqs from "../../Data/Preguntas.json";
---

<div class="py-20 px-6 md:px-12 container mx-auto animate-fade-in-up">
  <h2
    class="container mx-auto text-center text-4xl font-normal text-gray-800 mt-16 mb-6 relative animate-fade-in-up [animation-delay:.2s] transition-all duration-500 hover:scale-[1.02]"
  >
    Preguntas Frecuentes
    <span
      class="block h-[3px] w-24 mx-auto mt-2 bg-gradient-to-r from-dev to-dev/70 rounded-full animate-expand-x [animation-delay:.4s]"
    ></span>
  </h2>

  <div class="space-y-5 max-w-3xl mx-auto">
    {
      faqs.map((faq, index) => (
        <div
          key={index}
          class="group border border-gray-200 rounded-xl p-4 bg-white shadow-md hover:shadow-xl transition-shadow duration-300 animate-fade-in-left"
        >
          <input type="checkbox" id={`faq-${index}`} class="peer hidden" />

          <label
            for={`faq-${index}`}
            class="flex justify-between items-center cursor-pointer text-lg font-semibold text-secundario"
          >
            <span class="transition-colors group-hover:text-primario">
              {faq.question}
            </span>
            <span class="text-2xl text-primario font-bold transition-transform duration-300 peer-checked:rotate-45">
              +
            </span>
          </label>

          <div class="max-h-0 overflow-hidden transition-all duration-500 ease-in-out peer-checked:max-h-96 mt-4 text-gray-600">
            {faq.answer}
          </div>
        </div>
      ))
    }
  </div>
</div>
