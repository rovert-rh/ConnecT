---
const { Titulo, Descripcion, SubTitulo } = Astro.props;
---

<div
    class="relative flex flex-col items-center justify-center h-[26rem] sm:h-[28rem] md:h-[30rem] lg:h-[32rem] text-white px-4 sm:px-8 bg-gradient-to-b from-primario to-secundario overflow-hidden"
>
    <!-- Animaciones de fondo -->
    <div
        class="absolute w-64 sm:w-72 md:w-80 h-64 sm:h-72 md:h-80 bg-white/10 rounded-full blur-3xl animate-pulse-slow -top-12 -left-12 z-0"
    >
    </div>
    <div
        class="absolute w-48 sm:w-56 md:w-60 h-48 sm:h-56 md:h-60 bg-white/5 rounded-full blur-2xl animate-pulse-slow -bottom-12 -right-12 z-0"
    >
    </div>

    <!-- Contenido -->
    <div
        class="relative z-10 space-y-6 sm:space-y-7 animate-fade-in-up max-w-5xl w-full px-4 sm:px-8 text-center"
    >
        <h1 class="text-4xl sm:text-4xl md:text-5xl font-bold">
            {Titulo}
        </h1>
        <h2 class="text-xl sm:text-2xl md:text-3xl font-light text-white/80">
            {SubTitulo}
        </h2>

        <p
            class="text-base sm:text-lg md:text-xl text-white/90 leading-relaxed"
        >
            {
                Array.isArray(Descripcion)
                    ? Descripcion.map((linea, index) => (
                          <span key={index} class="block">
                              {linea}
                          </span>
                      ))
                    : Descripcion
            }
        </p>

        <a
            href="/contacto"
            class="inline-block bg-white text-dev font-bold py-2.5 px-6 rounded-xl shadow-md hover:bg-primario hover:text-white transition duration-300 transform hover:scale-105"
        >
            Contacto
        </a>
    </div>
</div>
