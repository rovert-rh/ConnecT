---
const { Titulo, Descripcion, Img } = Astro.props;
---

<div
    class="max-w-sm mx-auto bg-white rounded-lg shadow-lg overflow-hidden transition-transform transform hover:scale-105 hover:shadow-2xl duration-300"
>
    <!-- Imagen -->
    <img src={Img.src} alt={Titulo} class="w-full mt-5 h-24 object-contain" />

    <!-- Contenido -->
    <div class="p-5 text-center">
        <h1 class="text-2xl font-bold text-gray-800">{Titulo}</h1>
        <p class="mt-2 text-gray-600">{Descripcion}</p>
    </div>
</div>
