---
const { titulo, edicion, resumen, linkDescarga, linkLectura } = Astro.props;
import SolucionImg from "/public/Revista/Revista-Abril.webp";
---

<div
    class="grid grid-cols-1 md:grid-cols-2 gap-10 p-8 bg-white items-center max-w-7xl mx-auto mt-10 animate-fade-in"
>
    <!-- Columna izquierda con imagen -->
    <div class="flex justify-center items-center order-2 md:order-1">
        <img
            src={SolucionImg.src}
            alt={`Portada de la revista ${titulo}`}
            class="w-80 md:w-96 transform hover:scale-105 hover:rotate-1 transition-all duration-500 ease-in-out"
        />
    </div>

    <!-- Columna derecha -->
    <div class="flex flex-col gap-6 order-1 md:order-2 animate-slide-up">
        <h2 class="text-4xl font-extrabold text-gray-900 leading-tight">
            {titulo}
        </h2>
        <h3 class="text-xl text-gray-700 font-semibold">Edición: {edicion}</h3>
        <p class="text-lg text-gray-600 leading-relaxed">
            {resumen}
        </p>

        <div class="flex flex-wrap gap-4 mt-6">
            {
                linkLectura && (
                    <a
                        href={linkLectura}
                        target="_blank"
                        class="px-6 py-3 bg-primario text-white text-lg rounded-xl shadow-md hover:bg-secundario hover:scale-105 transition-all duration-300 ease-in-out"
                    >
                        Leer en línea
                    </a>
                )
            }
            {
                linkDescarga && (
                    <a
                        href={linkDescarga}
                        download
                        class="px-6 py-3 border border-platform text-platform text-lg rounded-xl hover:bg-platform hover:text-white hover:scale-105 transition-all duration-300 ease-in-out"
                    >
                        Descargar PDF
                    </a>
                )
            }
        </div>
    </div>
</div>
